  },
  "homepage": "https://github.com/lvxiaohai/process-audio-capture#readme",
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^7.0.0"
  },
  "devDependencies": {
    "@types/bindings": "^1.5.5",
    "@types/node": "^20.19.15",
    "electron": "^28.0.0",
    "node-gyp": "^9.x",
    "rimraf": "^5.0.0",
    "rollup": "^4.50.2",
    "typescript": "^5.0.0",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.5.4"
  }
