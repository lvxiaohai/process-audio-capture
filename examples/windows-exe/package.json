{
  "name": "process-audio-capture-windows-exe",
  "version": "1.0.0",
  "description": "Windows EXE 示例 - Process Audio Capture",
  "main": "main.js",
  "scripts": {
    "start": "node main.js",
    "build": "pkg . --targets node18-win-x64 --output dist/AudioCapture.exe",
    "build-all": "pkg . --targets node18-win-x64,node18-win-x86 --out-path dist"
  },
  "bin": "main.js",
  "pkg": {
    "assets": [
      "node_modules/process-audio-capture/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "process-audio-capture": "^1.0.11",
    "wav": "^1.0.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "keywords": [
    "audio",
    "capture",
    "process",
    "windows",
    "exe"
  ],
  "license": "MIT"
}
